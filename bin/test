#!/usr/bin/env bash

set -Eeuo pipefail

cd "$(dirname "$0")/.."

# Test the Python code style.
flake8 --ignore=E501 ./betty

# Test the CSS code style.
./node_modules/.bin/stylelint "./**/*.css"

# Test the JS code style.
./node_modules/.bin/eslint "./**/*.js"

# Run unit tests with coverage.
coverage erase
coverage run -m nose2
coverage report -m
