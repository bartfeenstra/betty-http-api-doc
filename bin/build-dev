#!/usr/bin/env bash

set -Eeuo pipefail

cd "$(dirname "$0")/.."

# Install Python dependencies.
pip install -r requirements-dev.txt

# Install JavaScript dependencies.
betty_npm_dir=$(python -c 'from betty import npm; npm.install(); print(npm._BETTY_INSTANCE_NPM_DIR)')
(cd "$betty_npm_dir" && npm install --only=dev)
